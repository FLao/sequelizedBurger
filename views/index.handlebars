<div class="container">
    <div class="image">
        <img src="/assets/images/cheeseburger.jpg"</img>
        <h1>Eat-Da-Burger!</h1>
    </div> 

    <div class="items">
        <div class="menu">
            <ol>
                {{#each burgers}}
                {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit">Devour it!</button>
                        </form>
                    </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>

        <div class="add">
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <input type="text" id="bu" name="burger_name">
                </div>

                <div class="btn">   
                    <button type="submit" class="sub">Submit</button>
                    <h5>Enter a burger you want to eat and click on submit!</h5>
                </div>
            </form>
        </div>

        <div class="eaten">   
            <ol>
                {{#each burgers}}
                {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}
                    </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>